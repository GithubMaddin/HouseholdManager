<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

    <ImageView android:layout_width="40dp" android:layout_height="40dp"
               android:id="@+id/img_main"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txt_name"
              android:layout_marginStart="72dp" android:layout_marginTop="12dp"/>

    <Spinner android:layout_width="100dp" android:layout_height="wrap_content" android:id="@+id/spn_unit"
             android:layout_alignParentEnd="true" android:layout_marginTop="56dp"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/edt_quantity"
              android:layout_toStartOf="@id/spn_unit" android:layout_alignBottom="@id/spn_unit"
              android:inputType="number"/>
</RelativeLayout>